    "@types/node": "^20.14.0",
    "@types/nodemailer": "^6.4.15",
    "nodemon": "^3.1.2",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@types/express": "^4.17.21",
    "axios": "^1.7.2",
