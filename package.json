{
  "name": "rekonsile-dash-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "prod": "npm run build && pm2 start dist/index.js --name rekonsile-dash-api",
    "prod:stop": "pm2 stop rekonsile-dash-api",
    "prod:restart": "npm run build && pm2 restart rekonsile-dash-api",
    "prod:logs": "pm2 logs rekonsile-dash-api",
    "prod:save": "pm2 save",
    "pm2:startup": "pm2 startup && pm2 save",
    "pm2:logrotate": "pm2 install pm2-logrotate && pm2 set pm2-logrotate:max_size 10M && pm2 set pm2-logrotate:retain 5 && pm2 set pm2-logrotate:compress true && pm2 set pm2-logrotate:dateFormat YYYY-MM-DD_HH-mm-ss && pm2 set pm2-logrotate:workerInterval 30 && pm2 set pm2-logrotate:rotateInterval '0 0 * * *'"
  },
  "keywords": [],
