    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.7.0",
    "nodemailer": "^6.9.13",
    "pm2": "^5.4.2",
    "shopify-api-node": "^3.13.1",
    "speakeasy": "^2.0.0"
  }
}
